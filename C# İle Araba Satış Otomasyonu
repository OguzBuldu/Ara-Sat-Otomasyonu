        static void Audi()
        {
            while (true)
            {
                Console.WriteLine("Toyota Modellerimiz;");
                List<string> toyota_modelleri = new List<string> { "A3", "A4", "Q7", "Q3" };
                toyota_modelleri.Select((model1, index) => $"{index + 1}. {model1}")
               .ToList()
               .ForEach(Console.WriteLine);

                string toyota_secimi = Console.ReadLine();

                if (toyota_secimi == "1" || toyota_secimi == "a3")
                {
                    Console.WriteLine("Aracımızın Fiyati; 1.542.000 TL");
                    Console.WriteLine("Bu Modellde Bulunan Renklerimiz; ");
