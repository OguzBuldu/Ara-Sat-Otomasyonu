    internal class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Galerimize Hoşgeldiniz.");
            List<string> markalar = new List<string> { "Toyota", "Fiat", "Mercedes", "Audi", "Ford", "Porshe", "Honda" }; // Liste 

            while (true)
            {
                Console.WriteLine("Lütfen Satın Almak İstediğiniz Aracın Markasını Listede Bulunan Numaralardan Ya Da Aracın Markasını Yazınız.");
                // Listeyi Göstermek ve Başına Rakamları Koymak İçin;
                markalar.Select((marka, index) => $"{index + 1}. {marka}")
               .ToList()
               .ForEach(Console.WriteLine);

                string secilen_araç = Console.ReadLine();
                if (secilen_araç == "1" || secilen_araç == "toyota")
                {
                    Console.WriteLine("Toyota'yı Seçtiniz.");
                    Toyota();


                }
                else if (secilen_araç == "2" || secilen_araç == "fiat")
                {
                    Console.WriteLine("Fiat'ı Seçtiniz.");
                    Fiat();
                }
                else if (secilen_araç == "3" || secilen_araç == "mercedes")
                {
                    Console.WriteLine("Mercedes'i Seçtiniz.");
                    Mercedes();
                }
                else if (secilen_araç == "4" || secilen_araç == "audi")
                {
                    Console.WriteLine("Auid'i Seçtiniz.");
                    Audi();
                }
                else if (secilen_araç == "5" || secilen_araç == "ford")
                {
                    Console.WriteLine("Ford'u Seçtiniz.");
                    Ford();
                }
                else if (secilen_araç == "6" || secilen_araç == "porshe")
                {
                    Console.WriteLine("Porshe'yi Seçtiniz.");
                    Porshe();
                }
                else if (secilen_araç == "7" || secilen_araç == "honda")
                {
                    Console.WriteLine("Honda'yı Seçtiniz.");
                    Honda();
                }
                else
                {
                    Console.WriteLine("Lütfen Listede Bulunan Araçlardan Birini Yazınız.");
                    continue;
                }


            }

        }
        static void Toyota()
        {

